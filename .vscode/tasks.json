{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "echoCommand": true,
    "tasks": [
        {
            "label": "buildcuda",
            "command": "nvcc",
            "args": ["-g", "-o", "build/main.exe", "src/main.cu"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "buildc",
            "command": "g++",
            "args": ["-g", "-o", "build/mainc.exe", "src/main.c"],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
