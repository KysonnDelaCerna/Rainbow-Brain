{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "echoCommand": true,
    "tasks": [
        {
            "label": "buildnogui",
            "command": "nvcc",
            "args": ["-g", "-o", "build/nogui.exe", "src/nogui.cu", "src/include/gameOfLife.c"],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "buildgui",
            "command": "gcc",
            "args": ["-g", "-o", "build/gui.exe", "src/gui.c", "src/include/gameOfLife.c", "-mwindows"],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
